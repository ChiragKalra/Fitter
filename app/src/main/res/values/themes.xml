<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.ParentTheme" parent="Theme.MaterialComponents.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="FloatHint" arent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>

    <style name="AppTheme" parent="AppTheme.LightTheme" />

    <!-- light theme -->
    <style name="AppTheme.LightTheme" parent="AppTheme.ParentTheme">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/white_700</item>
        <item name="colorAccent">@color/blue_500</item>

        <!-- Background Colors -->
        <item name="backgroundColor">@color/white_700</item>
        <item name="headerBackgroundColor">@color/white_900</item>
        <item name="translucentBackgroundColor">@color/translucent_white_700</item>
        <item name="trackbarBackgroundColor">@color/white_200</item>
        <item name="colorOnPrimary">?backgroundColor</item>
        <item name="android:windowBackground">?backgroundColor</item>
        <item name="android:navigationBarColor">?backgroundColor</item>
        <item name="selectedItemBackground">@color/white_500</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="tabBackground">?backgroundColor</item>

        <!-- Text Colors -->
        <item name="tabSelectedTextColor">@color/blue_500</item>
        <item name="android:textColorPrimary">@color/black_700</item>
        <item name="headingTextColor">@color/blue_700</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:textColorSecondary">@color/black_500</item>
        <item name="android:textColorHint">@color/blue_500</item>

        <!-- Element Colors -->
        <item name="colorControlPurple">@color/purple_700</item>
        <item name="colorControlGreen">@color/green_700</item>
        <item name="colorControlBlue">@color/blue_700</item>
        <item name="colorControlRed">@color/red_700</item>

        <!-- Widget Themes -->
        <item name="newFabStyle">@style/LightTheme.NewFabTheme</item>
        <item name="closeFabStyle">@style/LightTheme.CloseFabTheme</item>
        <item name="miniFabStyle">@style/LightTheme.MiniFabTheme</item>
        <item name="appBarLayoutStyle">@style/LightTheme.AppBarOverlay</item>
        <item name="actionModeStyle">@style/LightTheme.ActionMode</item>
        <item name="android:alertDialogTheme">@style/LightTheme.AlertDialog</item>
        <item name="editTextStyle">@style/LightTheme.EditTextTheme</item>
    </style>

    <style name="LightTheme.NewFabTheme" parent="">
        <item name="fabCustomSize">@dimen/fab_size</item>
        <item name="colorSecondary">@color/white_700</item>
        <item name="colorOnSecondary">@color/blue_500</item>
        <item name="colorOnSurface">@color/blue_500</item>
    </style>

    <style name="LightTheme.CloseFabTheme" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="fabCustomSize">@dimen/fab_size</item>
        <item name="colorSecondary">@color/white_700</item>
        <item name="colorOnSecondary">@color/red_500</item>
        <item name="colorOnSurface">@color/red_500</item>
    </style>

    <style name="LightTheme.MiniFabTheme" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="fabCustomSize">@dimen/mini_fab_size</item>
        <item name="colorSecondary">@color/white_700</item>
        <item name="colorOnSecondary">@color/blue_500</item>
        <item name="colorOnSurface">@color/blue_500</item>
    </style>

    <style name="LightTheme.AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorOnSurface">@color/black_700</item>
        <item name="android:background">@color/white_700</item>
    </style>


    <style name="LightTheme.EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">@color/blue_700</item>
        <item name="android:colorAccent">@color/blue_700</item>
        <item name="colorControlNormal">@color/blue_200</item>
        <item name="colorControlActivated">@color/blue_500</item>
        <item name="android:textColorHint">@color/blue_500</item>
        <item name="android:textColorPrimary">@color/blue_700</item>
    </style>

    <style name="LightTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">18sp</item>
        <item name="background">?colorPrimary</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="android:titleTextColor">@color/black_700</item>
        <item name="android:actionButtonStyle">@color/black_700</item>
    </style>

    <style name="LightTheme.ActionMode" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/white_700</item>
        <item name="android:background">@color/white_700</item>
        <item name="android:textColor">@color/black_700</item>
        <item name="popupMenuBackground">@color/white_700</item>
        <item name="android:popupBackground">@color/white_700</item>
        <item name="android:itemBackground">@color/white_700</item>
    </style>

    <style name="LightTheme.Menu" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorSurface">@color/white_700</item>
    </style>


    <!-- dark theme -->
    <style name="AppTheme.DarkTheme" parent="AppTheme.ParentTheme">
        <!-- Primary Colors -->
        <item name="colorPrimary">@color/blue_200</item>
        <item name="colorPrimaryDark">@color/black_700</item>
        <item name="colorAccent">@color/blue_500</item>

        <!-- Background Colors -->
        <item name="backgroundColor">@color/black_700</item>
        <item name="headerBackgroundColor">@color/black_900</item>
        <item name="translucentBackgroundColor">@color/translucent_black_700</item>
        <item name="trackbarBackgroundColor">@color/black_200</item>
        <item name="colorOnPrimary">?backgroundColor</item>
        <item name="android:windowBackground">?backgroundColor</item>
        <item name="android:navigationBarColor">?backgroundColor</item>
        <item name="selectedItemBackground">@color/black_500</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="tabBackground">?backgroundColor</item>

        <!-- Text Colors -->
        <item name="tabSelectedTextColor">@color/blue_500</item>
        <item name="android:textColorPrimary">@color/white_700</item>
        <item name="headingTextColor">@color/blue_700</item>
        <item name="android:textColor">@color/white_700</item>
        <item name="android:textColorSecondary">@color/white_500</item>
        <item name="android:textColorHint">@color/grey</item>

        <!-- Element Colors -->
        <item name="colorControlPurple">@color/purple_200</item>
        <item name="colorControlGreen">@color/green_200</item>
        <item name="colorControlBlue">@color/blue_200</item>
        <item name="colorControlRed">@color/red_200</item>

        <!-- Widget Themes -->
        <item name="newFabStyle">@style/DarkTheme.NewFabTheme</item>
        <item name="closeFabStyle">@style/DarkTheme.CloseFabTheme</item>
        <item name="miniFabStyle">@style/DarkTheme.MiniFabTheme</item>
        <item name="appBarLayoutStyle">@style/DarkTheme.AppBarOverlay</item>
        <item name="actionModeStyle">@style/DarkTheme.ActionMode</item>
        <item name="android:alertDialogTheme">@style/DarkTheme.AlertDialog</item>
        <item name="editTextStyle">@style/DarkTheme.EditTextTheme</item>
    </style>

    <style name="DarkTheme.NewFabTheme" parent="">
        <item name="fabCustomSize">@dimen/fab_size</item>
        <item name="colorSecondary">@color/black_500</item>
        <item name="colorOnSecondary">@color/blue_500</item>
        <item name="colorOnSurface">@color/blue_500</item>
    </style>

    <style name="DarkTheme.CloseFabTheme" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="fabCustomSize">@dimen/fab_size</item>
        <item name="colorSecondary">@color/black_500</item>
        <item name="colorOnSecondary">@color/red_500</item>
        <item name="colorOnSurface">@color/red_500</item>
    </style>

    <style name="DarkTheme.MiniFabTheme" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="fabCustomSize">@dimen/mini_fab_size</item>
        <item name="colorSecondary">@color/black_500</item>
        <item name="colorOnSecondary">@color/blue_500</item>
        <item name="colorOnSurface">@color/blue_500</item>
    </style>

    <style name="DarkTheme.AlertDialog" parent="@style/ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorOnSurface">@color/white_700</item>
        <item name="android:background">@color/white_700</item>
    </style>


    <style name="DarkTheme.EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="colorAccent">@color/blue_700</item>
        <item name="android:colorAccent">@color/blue_700</item>
        <item name="colorControlNormal">@color/blue_200</item>
        <item name="colorControlActivated">@color/blue_500</item>
        <item name="android:textColorHint">@color/blue_500</item>
        <item name="android:textColorPrimary">@color/blue_200</item>
    </style>

    <style name="DarkTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">18sp</item>
        <item name="background">?colorPrimary</item>
        <item name="android:textColor">@color/white_700</item>
        <item name="android:titleTextColor">@color/white_700</item>
        <item name="android:actionButtonStyle">@color/white_700</item>
    </style>

    <style name="DarkTheme.ActionMode" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="background">@color/white_700</item>
        <item name="android:background">@color/white_700</item>
        <item name="android:textColor">@color/white_700</item>
        <item name="popupMenuBackground">@color/white_700</item>
        <item name="android:popupBackground">@color/white_700</item>
        <item name="android:itemBackground">@color/white_700</item>
    </style>

    <style name="DarkTheme.Menu" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="colorSurface">@color/white_700</item>
    </style>

    <style name="roundImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
